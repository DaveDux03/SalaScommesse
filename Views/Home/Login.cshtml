@model SalaScommesse2_0.Models.Utente

@{
    ViewData["Title"] = "Accedi";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h2><i class="fas fa-sign-in-alt"></i> Accedi al tuo account</h2>
        </div>

        <form asp-action="Login" class="login-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-user"></i> Username
                </label>
                <input name="username" class="form-control" placeholder="Il tuo username" />
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-lock"></i> Password
                </label>
                <input name="password" type="password" class="form-control" placeholder="La tua password" />
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-login">
                    <i class="fas fa-sign-in-alt"></i> Accedi
                </button>
            </div>
        </form>

        <div class="login-footer">
            <span>Non hai un account?</span>
            <a asp-action="Registrazione" class="register-link">
                <i class="fas fa-user-plus"></i> Registrati
            </a>
        </div>
    </div>
</div>